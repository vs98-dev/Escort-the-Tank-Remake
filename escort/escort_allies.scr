touch_tank:


  local.alarm1 = spawn trigger_multiple
  local.alarm1 setthread "tank_thread"
  local.alarm1 setsize ( -250 -250 -54 ) ( 250 250 108 )
  local.alarm1.targetname = "tank_trigger"
