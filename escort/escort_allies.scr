end


tank_thread:


local.player = parm.other


level.check = 0


  if(local.player.dmteam == allies) 
  {
  // iprintlnbold_noloc ("The Allies are near the Truck!")

    level.teamin = 1
    ////////////////////////////////

    $tank_allies drive $tank_1 10 06 40 256 // speed, accel/decel, close to nodes, lookahead

    ////////////////////////////////
  }

$tank_trigger nottriggerable

while(map_is_running)
{


  if((local.player IsTouching $tank_trigger)&&(IsAlive local.player)&&(local.player.dmteam != axis))
  {

if(getcvar(mapname) == "m3l3" || getcvar(mapname) == "m6l2a"  || getcvar(mapname) == "m1l2b")
{
  if ($tank_allies IsTouching $ramp1)
  {
  wait 2
  $tank_allies drive $tank_1 40 10 40 256 // speed, accel/decel, close to nodes, lookahead
  }
}

  wait 0.1

  }

  else
  {
  $tank_trigger triggerable
  $tank_allies stop
  // local.player iprint ("You are no longer near the Truck.")
  level.teamin = 0
  end
  }


waitframe

}


